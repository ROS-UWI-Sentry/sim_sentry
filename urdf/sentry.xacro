<?xml version="1.0" ?>
<robot name="sentry" xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:include filename="$(find sim_sentry)/urdf/materials.xacro" />
<!-- Transmission, currently not used -->
<!--<xacro:include filename="$(find sentry_description)/urdf/sentry.trans" />-->
<xacro:include filename="$(find sim_sentry)/urdf/sentry.gazebo" />

<!--  Base link -->
<!-- Combine as much bodies as possible into the base_link, this will reduce the complexity of the design -->
<link name="base_link">
  <inertial>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <mass value="1"/>
    <inertia ixx="0.0395416666667" ixy="0" ixz="0" iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
  </inertial>
  <visual>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <mesh filename="package://sentry_description/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="silver"/>
  </visual>
  <collision>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <mesh filename="package://sentry_description/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>
</link>

<!-- Wheel Link -->
<!-- Both wheels can be refferenced from the same STL -->
<link name="left_wheel">
  <inertial>
    <!--<origin rpy="0 0 0" xyz="-0.16605823931256913 -0.20000099435655025 0.0635760224098007"/>-->
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <mass value="1"/>
    <inertia ixx="0.001218" ixy="-0.0" ixz="0.0" iyy="0.000635" iyz="-0.0" izz="0.000635"/>
  </inertial>
  <visual>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <mesh filename="package://sentry_description/meshes/wheel.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="silver"/>
  </visual>
  <collision>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <mesh filename="package://sentry_description/meshes/wheel.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>
</link>

<link name="right_wheel">
  <inertial>
    <!--<origin rpy="0 0 0" xyz="0.16605823931257102 -0.20000099435655025 0.0635739775901992"/>-->
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <mass value="1"/>
    <inertia ixx="0.001218" ixy="0.0" ixz="0.0" iyy="0.000635" iyz="0.0" izz="0.000635"/>
  </inertial>
  <visual>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <mesh filename="package://sentry_description/meshes/wheel.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="silver"/>
  </visual>
  <collision>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <mesh filename="package://sentry_description/meshes/wheel.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>
</link>

<!-- Joint between Left wheel and Base Link -->
<!-- The origin of the joint is used as the origin of that component, when positioning above -->
<joint name="left_wheel_joint" type="continuous">
  <origin rpy="0 0 0" xyz="-0.18650 0 0.07260"/>
  <parent link="base_link"/>
  <child link="left_wheel"/>
  <axis xyz="1.0 0.0 0.0"/>
  <limit effort="10000" velocity="1000"/>
  <joint_properties damping="1.0" friction="1.0"/>
</joint>

<joint name="right_wheel_joint" type="continuous">
  <origin rpy="0 0 0" xyz="0.18650 0 0.07260"/>
  <parent link="base_link"/>
  <child link="right_wheel"/>
  <axis xyz="1.0 0.0 0.0"/>
  <limit effort="10000" velocity="1000"/>
  <joint_properties damping="1.0" friction="1.0"/>
</joint>

</robot>
